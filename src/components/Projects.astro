---
import React from "../icons/React.astro";
import Spring from "../icons/Spring.astro";
import LinkButton from "./LinkButton.astro";
import LinkIcon from "../icons/Link.astro";
import Github from "../icons/Github.astro";
import ProjectCard from "./ProjectCard.astro";
import SmallCard from "./SmallCard.astro";


const PROJECTS = [
{
    title: "Medpoint Clinic",
    description:
      "Backend para la gestión de consultas, pacientes, médicos y facturación en una clínica médica. Proyecto de la Hackathon de TodoCode (outsider).",
    github: "https://github.com/ManuMarcos/clinica-backend",
    reverse: false,
    image: "/projects/medpoint_clinic.webp",
    tags: ["SPRING", "MY_SQL"],
  },
  {
    title: "Sistema de gestión de reclamos",
    description:
      "Diseñado para administradores de edificios, pueden gestionar edificios, usuarios y áreas comunes, mientras que propietarios e inquilinos pueden reportar y seguir reclamos sobre unidades o áreas compartidas. ",
    github: "https://github.com/ManuMarcos/Sistema-de-Gestion-Reclamos",
    image: "/projects/sistema_reclamos.webp",
    reverse: true,
    tags: ["SPRING","MY_SQL", "REACT"],
  },
  {
    title: "Air Manager",
    description:
      "Software de escritorio para agendar servicios, asignar técnicos, controlar stock y facturar instalaciones de aires acondicionados.",
    link: "https://youtu.be/po4dZbtvY44",
    github: "https://github.com/ManuMarcos/Sistema-de-Gestion-Instalaciones",
    reverse: false,
    image: "/projects/gestion_instalaciones_1.webp",
    tags: ["JAVA_SWING"],
  },
  {
    title: "AyuDar",
    description:
      "AyuDar es una plataforma web diseñada con la premisa Mobile First, funcionando como link entre los comedores y los donantes.",
    github: "https://github.com/ManuMarcos/ayudar",
    reverse: true,
    image: "/projects/ayudar2.png",
    tags: ["NEXT", "MONGO"],
  }
];
const SMALL_PROJECTS = [
{
    title: "Sistema de adopciones",
    description:
      "Sistema para el seguimiento y control de los animales que ingresan al refugio; como así también el manejo de las adopciones y las visitas programadas con los nuevos dueños de las mascotas.",
    github: "https://github.com/ManuMarcos/Sistema-de-Gestion-Adopciones",
    tags: ["DESSIGN_PATTERN"],
  },
  {
    title: "Sistema de gestión de reclamos",
    description:
      "Portal web para solicitar hardware, software y generar tickets de soporte en el Departamento de Informática de una empresa.",
    github: "https://github.com/ManuMarcos/Sistema-de-Gestion-Reclamos",
    tags: ["JAVASCRIPT","HTML", "CSS"]
  }
];
---

{
  (
    <div class=" flex flex-col gap-y-10 mb-5">
      {PROJECTS.map((project) => (
        <ProjectCard {...project} />
      ))}
    </div>

    <div class=" flex flex-row gap-x-3 mb-5">
      {SMALL_PROJECTS.map((project) => (
        <SmallCard {...project} />
      ))}
    </div>
    
    
  )
}
