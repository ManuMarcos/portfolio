---
interface Props {
  title: string;
  date: string;
  company: string;
  descriptions: string[];
}

const { title, company, date, descriptions } = Astro.props;
---

<li class="mb-10 ms-6">
  <span
    class="absolute flex items-center justify-center w-6 h-6 rounded-full -start-3 ring-8 ring-gray-900 bg-gradient-to-r from-blue-500 
  to-indigo-500"
  >
    <svg
      class="w-2.5 h-2.5 text-white"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      viewBox="0 0 20 20"
    >
      <path
        d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
      ></path>
    </svg>
  </span>
  <div class="ml-1">
    <h3
      class="flex items-center mb-1 text-lg font-semibold text-gray-900 dark:text-white"
    >
      {title} - {company}
    </h3>
    <time
      class="block mb-2 font-normal leading-none text-gray-400 dark:text-gray-500"
      >{date}</time
    >
    <ul
      class="space-y-1 text-gray-600 list-disc text-pretty list-inside dark:text-gray-300"
    >
      {descriptions.map((description) => <li>{description}</li>)}
    </ul>
  </div>
</li>
