    CERTIFICATIONS.map((certification) => (
      <a
        href={certification.link}
        target="_blank"
        rel="noopener noreferrer"
        class="relative block p-6 bg-black/30 backdrop-blur-md border border-white/10 rounded-xl shadow-lg transition-transform duration-300 hover:scale-105 hover:shadow-2xl"
      >
        <div class="absolute top-3 right-3 text-gray-400">
          <Link />
        </div>
        <h3 class="text-lg font-semibold text-white">{certification.title}</h3>
        <p class="text-sm text-gray-400">
          {certification.from}, {certification.date}
        </p>
      </a>
    ))
